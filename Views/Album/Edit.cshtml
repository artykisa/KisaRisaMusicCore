@using KisaRisaMusicCore.Models
@{
    Layout = "_Layout";
}
@model Album
       @{
           ViewBag.Title = "Edit file";
       }
       <form asp-action="edit" asp-controller="Album" asp-route-id="@Model.Id">
           <div class="form-group">
               <label asp-for="Title" class="control-label">Title</label>
               <input type="text" asp-for="Title" class="form-control" />
           </div>
          
               <div class="form-group">
                       <label asp-for="ArtistId" class="control-label"></label>
                           <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.Artist">
                               <option value="">-- Select file --</option>
                           </select>
                           <span asp-validation-for="ArtistId" class="text-danger" />
                   </div>
           <div class="form-group">
               <input type="submit" value="Save" class="btn btn-default" />
           </div>
       </form>

