@using KisaMusic.Domain.Models
@{
    ViewData["Title"] = "Error page";
    Layout = "_Layout";
}
@model Album
       @{
           ViewBag.Title = Model.Title;
           Layout = "_Layout";
       }
       <h2>Album @Model.Title</h2>
       <div>
           <dl class="dl-horizontal">
               <dt>Id</dt>
               <dd>@Model.Id</dd>
        
               <dt>Title</dt>
               <dd>@Model.Title</dd>
               
               <dt>Artist</dt>
               <a class="nav-link text-dark" asp-area="" asp-controller="Artist" asp-action="Details" asp-route-id="@Model.Artist.Id">@Model?.Artist.Nickname</a>
               <dt>Tracks</dt>
               <table class="table">
                                 @foreach (Track p in Model.Tracks)
                                 {
                                     <a class="nav-link text-dark" asp-area="" asp-controller="Track" asp-action="Details" asp-route-id="@p.Id">@p?.Title</a>
                                                     
                                 }
                             </table>
           </dl>
       </div>
