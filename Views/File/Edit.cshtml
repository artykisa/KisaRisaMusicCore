@using KisaRisaMusicCore.Models
@model FileKisa
@{
    Layout = "_Layout";
}
       @{
           ViewBag.Title = "Edit file";
       }
       <form asp-action="edit" asp-controller="File" asp-route-id="@Model.Id">
           <div class="form-group">
               <label asp-for="Name" class="control-label">Name</label>
               <input type="text" asp-for="Name" class="form-control" />
           </div>
           <div class="form-group">
               <label asp-for="Path" class="control-label">Path</label>
               <input type="text" asp-for="Path" class="form-control" />
           </div>
           <div class="form-group">
               <input type="submit" value="Save" class="btn btn-default" />
           </div>
       </form>

